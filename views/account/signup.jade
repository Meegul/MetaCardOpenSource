extends ../layout

block content
  .jumbotron-container-fluid(style = "text-align: center;")
    h3(style = "font-size: 2em") Connect with friends quickly.
    p(style = "font-size: 1.5em") Add friends on social media in one centralized location.
  .login-container(style = "padding-bottom: 5vh;")
    .panel
      .panel-body(style="text-align: center")
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Create an account
          .form-group
            input.form-control(type='text', name='first_name', id='first_name', placeholder='First Name',autofocus=true)
          .form-group
            input.form-control(type='text', name='last_name', id='last_name', placeholder='Last Name')
          .form-group
            input.form-control(type='email', name='email', id='email', placeholder='Email')
          .form-group
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
              input.form-control(type='password', name='confirm', id='confirm', placeholder='Confirm Password')
          .form-group
            p.text Already have an account?&nbsp;
              a(href='/login')
                strong Log in
            small.text-muted By signing up, you agree to the <a href="/">Terms of Service</a>.<br>
            button.btn.btn-success(type='submit') Create an account

        .hr-title
          span or

        .btn-toolbar.text(style="padding-left: 3%")
          a.btn.btn-google(href='/auth/google') Sign in with Google
          a.btn.btn-facebook(href='/auth/facebook') Sign in with Facebook