div(style="position: relative; height: 75px;")
nav.navbar.navbar-default.navbar-static-top(style= "position: fixed; top: 0; opacity: 1; background: transparent")
  div(class="container-fluid" style= "position: fixed; top: 0; width: 100%; background-color: #86E2D5")
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded= "false")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar(id="patty")
        span.icon-bar
        
      a.navbar-brand(href='/splash' style="font-size: 1.5em") MetaCard
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li(class=(title == 'My cards') ? 'active' : null)
          a(href='/mycards') My Cards
        li(class=(title == 'Friends') ? 'active' : null)
          a(href='/friends') Friends
        li(class=(title == 'Notifications') ? 'active' : null)
          a(href='/notifications') Notifications
        li(class=(title == 'Feedback') ? 'active' : null)
          a(href='/contact') Feedback
      ul.nav.navbar-nav.navbar-right(style="padding-right: 1%;")
        if user
          li.dropdown
            a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.picture
                img(src=user.picture)
              else
                img(src=user.gravatar)
              i.caret
            ul.dropdown-menu
              li
                if (user.first_name && user.last_name)
                  a(href='/account', style='font-weight: bold; height: 40px') #{user.first_name} #{user.last_name}
                    p(style='font-size: 80%; font-weight: normal') View Account
                else
                  a(href='/account') View Account
              li.divider
              li
                a(href='/logout') Logout
          a.li.button.btn.btn-default(href='/createcard', value='redirect', style='position: relative; bottom: -10px')
            .glyphicon.glyphicon-pencil(style='padding-right: 3.5%')
            | Create Card
        else
          li(class=(title == 'Sign up') ? 'active' : null)
            a(href='/signup') Sign up
          li(class=(title == 'Log in') ? 'active' : null)
            a(href='login') Log in
          
